    <Label fx:id="outputBox" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="68.0"
           style="-fx-border-image-width: 1; -fx-border-color: black;" textAlignment="RIGHT"/>
    <HBox>
        <Button text="x²"/>
        <Button text="√"/>
        <Button text="÷"/>
    </HBox>
    <HBox>
        <Button text="2"/>
        <Button text="3"/>
        <Button text="x"/>
